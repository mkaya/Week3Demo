<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/messageText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Message"
        app:layout_constraintTop_toBottomOf="@id/messageText"
        android:onClick="SendMessage"
        style="@style/AppTheme.ButtonRed"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Navigation"
        app:layout_constraintTop_toBottomOf="@id/button1"
        android:onClick="StartNavigation"
        style="@style/AppTheme.ButtonGreen"/>
    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple Alert Dialog"
        app:layout_constraintTop_toBottomOf="@id/button2"
        android:onClick="SimpleAlert"
        style="@style/AppTheme.ButtonRed"/>
    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple Alert Dialog Fragment"
        app:layout_constraintTop_toBottomOf="@id/button3"
        android:onClick="SimpleAlert2"
        style="@style/AppTheme.ButtonGreen"/>
    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialog Fragment with List Options"
        app:layout_constraintTop_toBottomOf="@id/button4"
        android:onClick="SimpleAlert3"
        style="@style/AppTheme.ButtonRed"/>
    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Options Multiple Selections"
        app:layout_constraintTop_toBottomOf="@id/button5"
        android:onClick="SimpleAlert4"
        style="@style/AppTheme.ButtonGreen"/>
    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Options Single Selction"
        app:layout_constraintTop_toBottomOf="@id/button6"
        android:onClick="SimpleAlert5"
        style="@style/AppTheme.ButtonRed"/>
    <Button
        android:textColor="@color/colorAccent"
        android:background="@drawable/main_button"
        android:onClick="Next"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"/>
</androidx.constraintlayout.widget.ConstraintLayout>